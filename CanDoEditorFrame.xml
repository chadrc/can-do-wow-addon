<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
    <Script file="CanDoEditorFrame.lua"/>

    <Button name="CanDoEditorFrameListItemButton" virtual="true" enableMouse="true">
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset>
                    <AbsDimension x="13" y="-10"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="175" y="18"/>
        </Size>
        <Scripts>
            <OnLoad>
                self:GetHighlightTexture():SetVertexColor(.196, .388, .8);
            </OnLoad>
        </Scripts>
        <ButtonText name="$parentText" justifyH="LEFT" wordwrap="false" text="Frame One"/>
        <NormalFont style="GameFontNormal"/>
        <HighlightFont style="GameFontHighlight"/>
        <HighlightTexture file="Interface\QuestFrame\UI-QuestLogTitleHighlight" alphaMode="ADD">
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="-15" y="1"/>
                    </Offset>
                </Anchor>
                <Anchor point="BOTTOMRIGHT">
                    <Offset>
                        <AbsDimension x="-10" y="1"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </HighlightTexture>
    </Button>

    <Frame name="CanDoEditorFrame" parent="UIParent" topLevel="true" enableMouse="true" hidden="true">
        <Size x="858" y="660"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Frames>
            <Frame parentKey="Border" inherits="DialogBorderTemplate"/>
            <Frame parentKey="Header" inherits="DialogHeaderTemplate">
                <KeyValues>
                    <KeyValue key="headerTextPadding" value="100" type="number"/>
                    <KeyValue key="textString" value="CanDo"/>
                </KeyValues>
            </Frame>
            <Frame parentKey="framesList" name="$parentFramesList" inherits="CanDoSettingsPanelTemplate">
                <Size x="175" y="569"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="20" y="-40"/>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString text="Frames" parentKey="Text" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="BOTTOM" relativePoint="TOP" y="5"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="createPanel" name="$parentDisplayOptions" inherits="CanDoSettingsPanelTemplate" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentFramesList" relativePoint="TOPRIGHT">
                        <Offset x="16" y="0"/>
                    </Anchor>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parentFramesList" relativePoint="BOTTOMRIGHT">
                        <Offset x="16" y="1"/>
                    </Anchor>
                    <Anchor point="RIGHT">
                        <Offset x="-22" y="0"/>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="$parentTitle" parentKey="title" text="Create" inherits="GameFontNormal" size="24">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="13" y="-13"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                    <Layer>
                        <FontString name="$parentNameText" parentKey="nameText" text="Name" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOM" y="-13"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <EditBox parentKey="nameInput" name="InputBoxTemplate" inherits="InputBoxScriptTemplate" autofocus="false">
                        <Size x="200" y="20"/>
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentNameText" relativePoint="RIGHT" x="13"/>
                        </Anchors>

                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="Left" atlas="common-search-border-left" useAtlasSize="false">
                                    <Size x="8" y="20"/>
                                    <Anchors>
                                        <Anchor point="LEFT" x="-5" y="0"/>
                                    </Anchors>
                                </Texture>
                                <Texture parentKey="Right" atlas="common-search-border-right">
                                    <Size x="8" y="20"/>
                                    <Anchors>
                                        <Anchor point="RIGHT" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                                <Texture parentKey="Middle" atlas="common-search-border-middle">
                                    <Size x="10" y="20"/>
                                    <Anchors>
                                        <Anchor point="LEFT" relativeKey="$parent.Left" relativePoint="RIGHT"/>
                                        <Anchor point="RIGHT" relativeKey="$parent.Right" relativePoint="LEFT"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                        <FontString inherits="ChatFontNormal"/>
                        <Scripts>
                            <OnTextChanged function="CanDoCreateFrameInput_OnTextChanged"/>
                        </Scripts>
                    </EditBox>
                    <Button name="$parentCreateFrameButton" parentKey="createButton" inherits="UIPanelButtonTemplate" text="Create" enabled="false">
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="$parentNameText"/>
                            <Anchor point="TOP" relativeTo="$parentNameText" relativePoint="BOTTOM" y="-13"/>
                        </Anchors>
                        <Size x="70" y="24"/>
                        <Scripts>
                            <OnMouseUp>
                            </OnMouseUp>
                            <OnMouseDown>
                            </OnMouseDown>
                        </Scripts>
                    </Button>
                </Frames>

            </Frame>

            <Frame parentKey="displayOptionsPanel" name="$parentDisplayOptions" inherits="CanDoSettingsPanelTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentFramesList" relativePoint="TOPRIGHT">
                        <Offset x="16" y="0"/>
                    </Anchor>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parentFramesList" relativePoint="BOTTOMRIGHT">
                        <Offset x="16" y="1"/>
                    </Anchor>
                    <Anchor point="RIGHT">
                        <Offset x="-22" y="0"/>
                    </Anchor>
                </Anchors>

                <Layers>
                    <Layer>
                        <FontString parentKey="title" text="Display" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOP" y="-13"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="itemsOptionsPanel" name="$parentItemsOptions" inherits="CanDoSettingsPanelTemplate" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentFramesList" relativePoint="TOPRIGHT">
                        <Offset x="16" y="0"/>
                    </Anchor>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parentFramesList" relativePoint="BOTTOMRIGHT">
                        <Offset x="16" y="1"/>
                    </Anchor>
                    <Anchor point="RIGHT">
                        <Offset x="-22" y="0"/>
                    </Anchor>
                </Anchors>

                <Layers>
                    <Layer>
                        <FontString text="Items" parentKey="Text" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOP" y="-13"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="itemsToggleTab" name="$parentItemsToggleTab" inherits="CanDoFramesToggleTabButtonTemplate">
                <Attributes>
                    <Attribute name="text" value="Items"/>
                </Attributes>
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentDisplayOptions"/>
                    <Anchor point="BOTTOM" relativeTo="$parentDisplayOptions" relativePoint="TOP"/>
                </Anchors>
                <Size>
                    <AbsDimension x="100" y="24"/>
                </Size>
            </Frame>
            <Frame parentKey="displayToggleTab" name="$parentDisplayToggleTab" inherits="CanDoFramesToggleTabButtonTemplate">
                <Attributes>
                    <Attribute name="text" value="Display"/>
                </Attributes>
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentItemsToggleTab" relativePoint="LEFT">
                        <Offset x="18" y="0"/>
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="100" y="24"/>
                </Size>
            </Frame>
        </Frames>
    </Frame>
</Ui>